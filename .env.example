# Environment Configuration
# Copy this file to .env and update with your values

# App Settings (CRITICAL: CHANGE SECRET_KEY IN PRODUCTION)
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars-use-openssl-rand-hex-32
JWT_EXPIRE_DAYS=1

# Database
# For development (default):
DATABASE_URL=sqlite:///./app.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/peakfinance

# AI Provider (Optional - uses mock if not configured)
AI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-3.5-turbo
AI_API_KEY=your-openai-api-key-here
AI_TIMEOUT=30
AI_MAX_RETRIES=2

# Feature Flags
IS_REGULATED_PARTNER=false

# CORS (Update with your production domain)
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
MAX_AI_REQUESTS_PER_MINUTE=10

# CSV Import
MAX_CSV_SIZE_MB=5
