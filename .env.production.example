# Production Environment Configuration
# Copy this file to .env and update with production values

# App Settings (CRITICAL: CHANGE THESE IN PRODUCTION)
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY-AT-LEAST-32-CHARS-USE-openssl-rand-hex-32
JWT_EXPIRE_DAYS=1
DATABASE_URL=sqlite:///./app.db

# For PostgreSQL in production (recommended):
# DATABASE_URL=postgresql://username:password@localhost:5432/peakfinance

# AI Provider (Optional - uses mock if not configured)
AI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-3.5-turbo
AI_API_KEY=your-openai-api-key-here
AI_TIMEOUT=30
AI_MAX_RETRIES=2

# Feature Flags
IS_REGULATED_PARTNER=false

# CORS (Update with your production domain)
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
MAX_AI_REQUESTS_PER_MINUTE=10

# CSV Import
MAX_CSV_SIZE_MB=5
